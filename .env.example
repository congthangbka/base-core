# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8085
SERVER_HOST=0.0.0.0
ENV=development

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=clean_architecture
DB_CHARSET=utf8mb4

# ============================================
# Logging Configuration
# ============================================
# Directory to store log files
LOG_DIRECTORY=./logs

# Number of days to keep log files (default: 30)
# Log files older than this will be automatically deleted
LOG_RETENTION_DAYS=30

# Log level: debug, info, warn, error (default: info)
# - debug: All logs (development)
# - info: Info, warn, error logs (production)
# - warn: Only warn and error logs
# - error: Only error logs
LOG_LEVEL=info

# Number of days after which log files will be compressed (default: 7)
# Files older than this will be compressed to .gz format to save disk space
LOG_COMPRESS_AFTER_DAYS=7

# ============================================
# Server Limits Configuration
# ============================================
# Request timeout in seconds (default: 30)
REQUEST_TIMEOUT_SECONDS=30

# Rate limiting - requests per second (default: 100)
RATE_LIMIT_RPS=100

# Rate limiting - burst size (default: 200)
RATE_LIMIT_BURST=200

# Maximum request size in MB (default: 10)
MAX_REQUEST_SIZE_MB=10
